<body>
    <div class="container">
        <header>
            <h1>Institute FAQ Assistant</h1>
            <p>Ask me anything about timings, fees, courses, admissions, and more!</p>
        </header>

        <div class="quick-questions">
            <button class="quick-btn" onclick="sendQuick('What are the timings?')">Timings</button>
            <button class="quick-btn" onclick="sendQuick('What are the fees?')">Fees</button>
            <button class="quick-btn" onclick="sendQuick('How can I contact you?')">Contact</button>
            <button class="quick-btn" onclick="sendQuick('How to apply?')">Admissions</button>
            <button class="quick-btn" onclick="sendQuick('What courses do you offer?')">Courses</button>
            <button class="quick-btn" onclick="sendQuick('Do you provide scholarships?')">Scholarships</button>
        </div>

        <div id="chat-container" class="chat-container">
            <div class="message bot">Hello! How can I help you with institute information today?</div>
        </div>

        <div class="input-area">
            <input type="text" id="user-input" placeholder="Type your question here..." autocomplete="off">
            <button id="send-btn" onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        function getResponse(userInput) {
            const input = userInput.toLowerCase().trim();

            if (/hi|hello|hey/.test(input)) {
                return "Hello! How can I help you with institute information today?";
            }
            if (/time|hours|open|schedule/.test(input)) {
                return "The institute is open Monday to Friday, 9:00 AM to 5:00 PM.";
            }
            if (/fee|cost|price|tuition/.test(input)) {
                return "Fees vary by course. Generally, it ranges from $500 to $2000 per semester.";
            }
            if (/contact|call|phone|email|address|location/.test(input)) {
                return "You can reach us at 0712 619 2403 or visit us at 123 Education Lane.";
            }
            if (/apply|admission/.test(input)) {
                return "Admissions are open for the Fall semester! Apply on our website's 'Join' page.";
            }
            if (/course|major|study|program/.test(input)) {
                return "We offer programs in Data Science, Web Development, and Digital Marketing.";
            }
            if (/scholarship|financial aid/.test(input)) {
                return "Yes, we offer merit-based scholarships. The deadline to apply is March 1st.";
            }
            if (/job|placement|career/.test(input)) {
                return "Our placement cell helps students secure internships and full-time roles.";
            }
            if (/hostel|dorm|housing/.test(input)) {
                return "On-campus housing is available for out-of-city students on a first-come basis.";
            }
            if (/teacher|faculty|professor/.test(input)) {
                return "Our faculty consists of industry experts with over 10+ years of experience.";
            }

            return "I'm sorry, I didn't quite catch that. Could you ask about timings, fees, or contact info?";
        }

        const chatContainer = document.getElementById('chat-container');
        const userInput = document.getElementById('user-input');

        function addMessage(text, type) {
            const msgDiv = document.createElement('div');
            msgDiv.classList.add('message', type);
            msgDiv.textContent = text;
            chatContainer.appendChild(msgDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        function sendMessage() {
            const text = userInput.value.trim();
            if (text === '') return;

            addMessage(text, 'user');
            userInput.value = '';

            const response = getResponse(text);
            setTimeout(() => addMessage(response, 'bot'), 400);
        }

        function sendQuick(question) {
            addMessage(question, 'user');
            const response = getResponse(question);
            setTimeout(() => addMessage(response, 'bot'), 400);
            userInput.focus();
        }

        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        // Focus input on load (great for mobile)
        window.onload = () => userInput.focus();
    </script>
</body>
</html>
